<style>
    .nolink {
        text-decoration: none;
        color: black;
    }

    .nolink:hover {
        text-decoration: none;
        color: black;
    }
</style>

<h1>Relação de documentações</h1>
<hr>
<br>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Aluno</th>
            <th scope="col">Atividade Complementar</th>
            <th scope="col">Tipo de Participação</th>
            <th scope="col">Horas Aproveitadas</th>
            <th scope="col">Situação</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each documentacao}}
        <tr>
            <th scope="row">{{cod_documentacao}}</th>
            <td><a class="nolink" href="/professor/alunos/exibir/{{rga}}">{{nome}}</a></td>
            <td><a class="nolink" href="/professor/atividades/exibir/{{atv_complementar_cod}}">{{nome_atividade}}</a></td>
            <td>{{nome_tipo_participacao}}</td>
            <td>{{horas_aproveitadas}}</td>
            <td>{{situacao_documentacao}}</td>
            <td><a href="/professor/documentacoes/exibir/{{cod_documentacao}}">Ver detalhes</a>
        </tr>
        {{/each}}
    </tbody>
</table>
