<div class="card">
    <div class="card-body">
        <h3 class="card-title">Período: </h3>
        <form action="/professor/relatorios/atividade-data/pesquisar" method="GET">
            <input type="date" name="data_inicial" class="form-control">
            <input type="date" name="data_final" class="form-control mt-2">
            <button type="submit" class="btn btn-primary btn-block mt-4">Pesquisar </button>
        </form>
    </div>
</div>

<div class="btn-group btn-group-toggle mt-4" data-toggle="buttons">
    <label class="btn btn-info active">
        <input type="radio" name="options" id="option1" autocomplete="off" onchange="matriculado(13);"> Atividades não
        avaliadas
    </label>
    <label class="btn btn-danger">
        <input type="radio" name="options" id="option2" autocomplete="off" onchange="reprovado(13);"> Atividades
        reprovadas
    </label>
    <label class="btn btn-success">
        <input type="radio" name="options" id="option3" autocomplete="off" onchange="aprovado(13);"> Atividades
        aprovadas
    </label>
    <label class="btn btn-secondary">
        <input type="radio" name="options" id="option3" autocomplete="off" onchange="todos();" checked> Todos
    </label>
</div>

<hr>
<table class="table table-hover" style="width: 100%">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Aluno</th>
            <th scope="col">Tipo de Atividade</th>
            <th scope="col">Atividade</th>
            <th scope="col">CH Total</th>
            <th scope="col">CH Aproveitada</th>
            <th scope="col">Situação</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each atividade}}
        <tr class="aluno-row">
            <th scope="row">{{cod_atividade}}</th>
            <td><a class="nolink" href="/professor/alunos/exibir/{{rga}}">{{nome}}</a></td>
            <td>{{nome_tipo_atividade}}</td>
            <td>{{nome_atividade}}</td>
            <td>{{carga_horaria_atividade}}</td>
            <td>{{carga_horaria_aproveitada}}</td>
            <td class="text-{{#if vermelho}}danger{{/if}}{{#if verde}}success{{/if}}{{#if azul}}info{{/if}}">
                {{situacao_atividade}}</td>
            <td><a href="/professor/atividades/exibir/{{cod_atividade}}">Ver detalhes</a>
        </tr>
        {{/each}}

    </tbody>
</table>